{
  "name": "strangelog",
  "version": "0.0.1",
  "description": "Manage your changelog via CLI.",
  "main": "index.js",
  "repository": "git@github.com:leoselig/strangelog.git",
  "author": "Leo Selig <dev.selig@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "babel src/ --out-dir lib/",
    "test-dev": "jest --config=jest.config.json --notify --watch",
    "test-ci": "jest --config=jest.config.json",
    "lint": "yarn run eslint .",
    "lint-fix": "yarn run lint -- --fix",
    "flow": "flow",
    "flow-typed": "flow-typed",
    "ci-pipeline": "yarn run test-ci && yarn run lint && yarn run flow",
    "prepublish": "yarn run build",
    "start": "babel-node src/cli/index.js"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-jest": "^20.0.3",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-stage-1": "^6.24.1",
    "eslint": "^3.19.0",
    "eslint-plugin-flowtype": "^2.34.0",
    "eslint-plugin-import": "^2.3.0",
    "exec-sh": "^0.2.0",
    "flow-bin": "^0.47.0",
    "flow-typed": "^2.1.2",
    "jest": "^20.0.4",
    "lolex": "^1.6.0"
  },
  "dependencies": {
    "fs-extra": "^3.0.1",
    "handlebars": "^4.0.10",
    "inquirer": "^3.1.1",
    "js-yaml": "^3.8.4",
    "yargs": "^8.0.2"
  },
  "bin": {
    "strangelog": "./lib/cli/index.js"
  }
}
